<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="297.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.toysocialnetwork.gui.RegisterWindow">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="-2.0" prefHeight="400.0" prefWidth="297.0" spacing="10.0">
         <children>
            <Label contentDisplay="TOP" prefHeight="70.0" prefWidth="298.0" text="TOY SOCIAL NETWORK" textAlignment="CENTER" textFill="#d42626">
               <font>
                  <Font name="Segoe UI Black" size="12.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="58.0" prefWidth="258.0" text="Join us to establish memorable friendships!" />
            <TextField fx:id="usernameText" prefHeight="25.6" prefWidth="220.0" promptText="Username" />
            <TextField fx:id="emailText" prefHeight="25.6" prefWidth="298.0" promptText="Email" />
            <PasswordField fx:id="passwordText" promptText="Password" />
            <PasswordField fx:id="confpassText" promptText="Confirm password" />
            <Button mnemonicParsing="false" onAction="#registerClicked" prefHeight="25.6" prefWidth="122.4" text="Register" />
            <Label fx:id="messageToUser" prefHeight="30.0" prefWidth="258.0" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
