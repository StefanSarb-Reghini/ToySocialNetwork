<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="455.0" prefWidth="295.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.toysocialnetwork.gui.Chat">
   <children>
      <VBox prefHeight="490.0" prefWidth="339.0">
         <children>
            <TableView fx:id="tableView" prefHeight="486.0" prefWidth="339.0">
               <columns>
                  <TableColumn fx:id="messageColumn" prefWidth="339.0" />
               </columns>
            </TableView>
            <HBox prefHeight="59.0" prefWidth="339.0">
               <children>
                  <TextField fx:id="messageBar" prefHeight="38.0" prefWidth="254.0" promptText="Type a message" />
                  <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendBtnClicked" prefHeight="30.0" prefWidth="86.0" text="Send" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
